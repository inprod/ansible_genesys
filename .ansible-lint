---
extends: default
rules:
  name:
    patterns:
      - '^[a-zA-Z0-9\-_\.\s]*$'
  line-length:
    max: 120
  truthy:
    allowed-values: ['true', 'false', 'yes', 'no']
  no-handler-name:
    patterns:
      - '^[a-zA-Z0-9\-_\.\s]*$'
exclude_paths:
  - .git
  - .github
  - .gitignore
  - tests/integration
